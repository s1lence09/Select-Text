{
      "manifest_version": 3,
        "name": "VidText Copy",
          "version": "1.0",
            "description": "Copy text from paused video frames using OCR with one click.",
              "permissions": ["scripting", "activeTab", "clipboardWrite"],
                "host_permissions": ["<all_urls>"],
                  "content_scripts": [
                      {
                            "matches": ["<all_urls>"],
                                  "js": ["content.js"],
                                        "css": ["overlay.css"]
                                            }
                                              ],
                                                "icons": {
                                                    "48": "icon.png",
                                                        "128": "icon.png"
                                                }
}